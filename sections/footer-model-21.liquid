    .footer-model-21 .footer_newsletter input::-moz-placeholder {  color:{{ section.settings.input_text }};}
    .footer-model-21 .footer_newsletter input:-ms-input-placeholder {  color:{{ section.settings.input_text }};}
    .footer-model-21 .footer_newsletter input { color:{{ section.settings.input_text }}; }
   .footer-model-21 h5 {color:{{ section.settings.footer_text }}; }
   .footer-model-21 .site-footer input {background:{{section.settings.footer_input_bg}};}
   .footer-model-21 .site-footer {border:1px solid {{section.settings.footer_border_clr}};}
   .footer-model-21 .grid__item.footer-contact-detail {border-bottom:1px solid {{section.settings.footer_border_clr}};}
   
   
   .footer-model-21 .support-block-type-6 {border-top:1px solid {{section.settings.footer_border_clr}};}
   
   .footer_btm_links .grid__item {
    border-left: 1px solid {{section.settings.footer_border_clr}}; 
}
   
   
   
   .footer-model-21 .input-group {background:{{section.settings.footer_input_bg}};}
   .footer-model-21 a:hover {color:{{ section.settings.color_footer_link_hover }} !important;}
   
   .footer-model-21 .site-footer .social-icons a {background:{{section.settings.social_icon_bg_clr}};color:{{section.settings.social_icon_txt_clr}};}
   .footer-model-21 .site-footer .social-icons a:hover {background:{{section.settings.social_icon_hover_bgclr}};color:{{section.settings.social_icon_hovertxt_clr}} !important;}
   
   .footer-model-21 .footer-wrapper-menu h4::before { background:{{section.settings.footer_title_border}};}
   
   
  </style>

