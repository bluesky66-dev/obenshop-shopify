<div data-section-id="{{ section.id }}"  data-section-type="Footer-model-21" class="footer-model-21" style="{% if section.settings.show_image_1 != blank %} background-image:url('{{ section.settings.image_1 | img_url: 'master' }}');width:100%;background-repeat:no-repeat;background-attachment:scroll;background-position:bottom center;float: left;  {% else %}float:left;width:100%;padding-top:90px;background:{{ section.settings.footer_bg }};{% endif %}">
  <div class="container">
  <footer class="site-footer">
  
      <div class="grid-uniform">  
        <div class="grid__item footer-contact-detail">
           {% if section.settings.footer_mail_id != blank %}
          <div class="grid__item wide--one-third post-large--one-third large--one-third medium--grid__item">   
            <div class="footer-top_icon">
              <span style="color:{{ section.settings.class_color }};"><i class="fas fa-envelope"></i></span>   
              
              
              <div class="footer-contact-desc">
              {% if section.settings.footer_mail_id_top_text != blank %}
              <p style="color:{{ section.settings.class_color }};">{{ section.settings.footer_mail_id_top_text }}</p>
              {% endif %} 
              <a style="color:{{ section.settings.footer_link }};" href="mailto:{{ section.settings.footer_mail_id }}">{{ section.settings.footer_mail_id }}</a>
              
              </div>
              
              
            </div>
          </div>
          {% endif %} 
          
          {% if section.settings.footer_phone_no != blank %}
          <div class="grid__item wide--one-third post-large--one-third large--one-third medium--grid__item">
            <div class="footer-top_icon">
              <span style="color:{{ section.settings.class_color }};"><i class="fa fa-phone"></i></span>
              
                <div class="footer-contact-desc">
              <p style="color:{{ section.settings.class_color }};">{{ section.settings.footer_phone_no }}</p>
              {% if section.settings.footer_phone_no_top_text != blank %}
              <p style="color:{{ section.settings.footer_link }};">{{ section.settings.footer_phone_no_top_text }}</p>
              {% endif %} 
              </div>
            </div>
          </div>
          {% endif %} 

         

          {% if section.settings.footer_social_enable %}            
          <div class="grid__item wide--one-third post-large--one-third large--one-third medium--grid__item">             
           
            <div class="footer_social_links">    
              
              {% include 'social-links-type-6' %}
            </div>          
          </div>
          {% endif %}
        </div>
        
        
        
        
        <div class="footer-wrapper-menu">
        
        {% if section.settings.show_contact %}
        <div class="grid__item wide--one-quarter post-large--one-quarter large--one-quarter medium--grid__item footer-address">
           <div class="footer-logo">
              {% if section.settings.footer_logo != blank %}                       
              <a href="/">
                <img class="normal-footer-logo" src="{{ section.settings.footer_logo | img_url: "master" }}" alt="{{ shop.name }}" />
              </a>
              {% endif %}          
            </div>
          {% if section.settings.footer_contact_title != blank %}        
          <h4 style="color:{{ section.settings.footer_text }};">{{ section.settings.footer_contact_title}}</h4> 
          {% endif %} 
          {% if section.settings.footer_address != blank %}
          <p style="color:{{ section.settings.footer_link }};">   {{ section.settings.footer_address }}</p>          
          {% endif %} 
        </div>
        {% endif %}                 
        <div class="grid__item wide--three-quarters post-large--three-quarters large--three-quarters medium--grid__item footer_btm_links">

          {% assign num_footer_columns = 0 %}     

          {%- assign footer_linklist1 = section.settings.footer_menu_1 %}
          {% if linklists[footer_linklist1].links.size > 0 %}
          {% assign num_footer_columns = num_footer_columns | plus: 1 %}
          {% endif %}

          {%- assign footer_linklist2 = section.settings.footer_menu_2 %}
          {% if linklists[footer_linklist2].links.size > 0 %}
          {% assign num_footer_columns = num_footer_columns | plus: 1 %}
          {% endif %}

          {%- assign footer_linklist3 = section.settings.footer_menu_3 %}
          {% if linklists[footer_linklist3].links.size > 0 %}
          {% assign num_footer_columns = num_footer_columns | plus: 1 %}
          {% endif %}

          {% case num_footer_columns %}
          {% when 0 %}
          {% when 1 %}
          {% assign footer_num_column_width = 'text-left' %}
          {% when 2 %}
          {% assign footer_num_column_width = 'wide--one-half post-large--one-half large--one-half medium--one-whole' %}
          {% when 3 %}
          {% assign footer_num_column_width = 'wide--one-third post-large--one-third large--one-third medium--one-whole' %}           
          {% endcase %} 



          {%- assign footer_linklist1 = section.settings.footer_menu_1 %}
          {% if linklists[footer_linklist1].links.size > 0 %}
          <div class="grid__item {{ footer_num_column_width }}">   
            {% if section.settings.footer_menu_1_title != blank %}
            <h4 style="color:{{ section.settings.footer_text }};">{{ section.settings.footer_menu_1_title }}</h4>
            {% endif %}
            <ul class="site-footer__links">
              {% for link in linklists[section.settings.footer_menu_1].links %}
              <li><a style="color:{{ section.settings.footer_link }};"  href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>          
          </div>
          {% endif %}    


          {%- assign footer_linklist2 = section.settings.footer_menu_2 %}
          {% if linklists[footer_linklist2].links.size > 0 %}
          <div class="grid__item {{ footer_num_column_width }}">          
            {% if section.settings.footer_menu_2_title != blank %}
            <h4 style="color:{{ section.settings.footer_text }};"> {{ section.settings.footer_menu_2_title }}</h4>
            {% endif %}
            <ul class="site-footer__links">
              {% for link in linklists[section.settings.footer_menu_2].links %}
              <li><a style="color:{{ section.settings.footer_link }};"  href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>         
          </div>
          {% endif %}

          {%- assign footer_linklist3 = section.settings.footer_menu_3 %}
          {% if linklists[footer_linklist3].links.size > 0 %}
          <div class="grid__item {{ footer_num_column_width }}">          
            {% if section.settings.footer_menu_3_title != blank %}
            <h4 style="color:{{ section.settings.footer_text }};">{{ section.settings.footer_menu_3_title }}</h4>
            {% endif %}
            <ul class="site-footer__links">
              {% for link in linklists[section.settings.footer_menu_3].links %}
              <li><a style="color:{{ section.settings.footer_link }};"  href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>         
          </div>
          {% endif %}

        </div>    
        
        
        </div>
        
        
      </div>
    
 

  
    <div class="support-block-type-6"> 
      <ul class="support_block" >         
        {% if section.blocks.size > 0 %}      
        {% for block in section.blocks %}
        {% case section.blocks.size %}
        {% when 1 %}
        {%- assign block_width = 'one-whole text-center' -%}
        {% when 2 %}
        {%- assign block_width = 'wide--one-half post-large--one-half large--one-half medium--one-whole small-grid__item' -%}
        {% when 3 %}
        {%- assign block_width = 'wide--one-third post-large--one-third large--one-third medium--one-whole small-grid__item' -%}
        {% when 4 %}
        {%- assign block_width = 'wide--one-quarter post-large--one-quarter large--one-half medium--one-whole small-grid__item' -%}
        {% endcase %}
        <li class="grid__item {{ block_width }} wow fadeInUp"  data-wow-delay="{{ settings.time_lazy_load }}ms">

          <div class="support_section" >  
            <div class="support-wrapper">
              {% if block.settings.class != blank  %}  
              <div class="support_icon" style="">                      
                <span  class="icon" style="color:{{ section.settings.class_color }};"><i class="{{ block.settings.class }}"></i></span>
              </div>
              {% endif %}   
              <div class="support_text"> 
                {% if block.settings.title != blank  %}  
                <h4 style="color:{{ section.settings.title_color }};">{{ block.settings.title }}</h4>
                {% endif %}  
                {% if block.settings.desc != blank  %}  
                <p style="color:{{ block.settings.desc_color }};" class="desc">{{ block.settings.desc }}</p>
                {% endif %}        
              </div>   
            </div>

          </div>    
        </li>  
        {% endfor %}
        {% endif %}
      </ul>
    </div>
  


  </footer>
      <div class="grid__item">

    <div style="background:{{ section.settings.copyright_bg }};" class="grid__item copyright-section {% unless section.settings.footer_show_methods_of_payment %}text-center{% endunless %}">
      <div class="container">
        {% if  section.settings.copyright != blank %}
        <p style="color:{{ section.settings.copyright_text }};"  class="copyright">{{ section.settings.copyright }} {% if section.settings.show_powered_by %}  {{ powered_by_link }} {% endif %}</p>
        {% endif %}   
        {% if section.settings.footer_show_methods_of_payment %}
        <div class="footer-icons {% if section.settings.copyright != blank %}null{% else %}text-center{% endif %}">        
          <ul class="inline-list payment-icons">
            {% if section.settings.payment_icon_1 != blank %}<li><a href="/cart"><img src="{{ section.settings.payment_icon_1 | img_url }}" alt="payment_icon_1" /></a></li>{% endif %}
