          {% endif %}

          {% if  section.settings.footer_contact_link != blank and section.settings.footer_contact_id != blank %}
          <div class="office-mail">
            <a style="color:{{ section.settings.footer_link_clr }};" href="mailto:{{ section.settings.footer_contact_link }}" style="color:{{ section.settings.footer_txt_clr }};"><i class="far fa-envelope"></i>{{ section.settings.footer_contact_id }}</a>
            {% endif %} 
          </div>
          {% endif %}       

          {% if section.settings.footer_show_methods_of_payment %}
          <div class="footer-icons">        
            <ul class="inline-list payment-icons">
              {% if section.settings.payment_icon_1 != blank %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_1  }}"></i></a></li>{% endif %}
              {% if section.settings.payment_icon_2 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_2 }}"></i></a></li>{% endif %}
              {% if section.settings.payment_icon_3 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_3  }}"></i></a></li>{% endif %}
              {% if section.settings.payment_icon_4 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_4  }}"></i></a></li>{% endif %}
              {% if section.settings.payment_icon_5 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_5  }}"></i></a></li>{% endif %}
              {% if section.settings.payment_icon_6 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_6 }}"></i></a></li>{% endif %}    
              {% if section.settings.payment_icon_7 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_7 }}"></i></a></li>{% endif %}            
              {% if section.settings.payment_icon_8 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_8 }}"></i></a></li>{% endif %}   
              {% if section.settings.payment_icon_9 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_9 }}"></i></a></li>{% endif %}  
              {% if section.settings.payment_icon_10 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_10 }}"></i></a></li>{% endif %}            
            </ul>                  
          </div> 
          {% endif %}
        </div>
        {% endif %} 
      </div>
        </div>
    </footer>

    <div class="grid__item copyright-section" style="border-top: 1px solid {{ section.settings.footer_border }};">

      {% if  section.settings.copyright != blank %}
      <p style="color:{{ section.settings.copyright_clr }}" class="copyright left">{{ section.settings.copyright }} &copy; {{ 'now' | date: "%Y" }}, {{ shop.name }} {% if section.settings.show_powered_by %} {{ powered_by_link }}{% endif %}</p>
      {% endif %}
      {% if section.settings.footer_menu %}
      <ul class="menu right">
        {% for link in linklists[section.settings.footer].links %}             
        <li class="{% if link.active %}current_page_item{% endif %}">
          <a style="color:{{ section.settings.footer_menu_clr }}" href="{{ link.url }}" class="menu_{{forloop.index }}">{{ link.title}}</a>    
        </li>  
        {% endfor %}
      </ul>
      {% endif %}    
    </div>
  
  <style>
        {% if section.settings.footer_border_image %} .footer-model-1:before { background-image:url({{ section.settings.footer_border_bg | img_url: 'master' }});background-repeat: no-repeat; content: "";  float: left; width: 100%;  height: 73px; } {% endif %}
    .footer-model-1 .site-footer__links a:hover,.footer-model-1 .office-mail a:hover {   color:{{ section.settings.footer_link_hover_clr }} !important;}
    .footer-model-1 .menu li a:hover { color:{{ section.settings.footer_menu_hover_clr }} !important;}
    .footer-model-1 .copyright a { color:{{ section.settings.copyright_link }};}
    .footer-model-1 .copyright a:hover { color:{{ section.settings.copyright_link_hover }};}
    .footer-model-1 .site-footer .grid-uniform .grid__item.footer__about a:hover { color:{{ section.settings.abt_link_hover_clr }} !important;}
    .footer-model-1 .site-footer .social-icons li a:hover { color:{{ section.settings.social_link_hover }};  }
    .footer-model-1 .site-footer .social-icons li a { color:{{ section.settings.social_link }};  }
    .footer-model-1 .payment-icons a { color:{{ section.settings.payment_color }}; }
    .footer-model-1 .payment-icons a:hover { color:{{ section.settings.payment_hover_color }}; }
  </style>
</div>

