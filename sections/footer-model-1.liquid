

<div data-section-id="{{ section.id }}"  data-section-type="footer-model-1" class="footer-model-1" style="{% if section.settings.footer_bg_img %} background-image:url('{{ section.settings.image_1 | img_url: 'master' }}');background-size:cover;background-repeat:no-repeat;{% endif %}">
  
    <footer class="site-footer" style="background-color:{{ section.settings.footer_bg_clr }};"> 
      <div class="wrapper">
      <div class="grid-item ">
        {% assign num_footer_columns = 0 %}      

        {%- assign footer_linklist = section.settings.footer_menu_1 %}
        {% if linklists[footer_linklist].links.size > 0 %}
        {% assign num_footer_columns = num_footer_columns | plus: 1 %}
        {% endif %}

        {%- assign footer_linklist = section.settings.footer_menu_2 %}
        {% if linklists[footer_linklist].links.size > 0 %}
        {% assign num_footer_columns = num_footer_columns | plus: 1 %}
        {% endif %}

        {%- assign footer_linklist = section.settings.footer_menu_3 %}
        {% if linklists[footer_linklist].links.size > 0 %}
        {% assign num_footer_columns = num_footer_columns | plus: 1 %}
        {% endif %}

        {% case num_footer_columns %}
        {% when 0 %}
        {% when 1 %}
        {% assign footer_column_width = 'text-left' %}
        {% when 2 %}
        {% assign footer_column_width = 'wide--one-half post-large--one-half large--one-half medium--one-half' %}
        {% when 3 %}
        {% assign footer_column_width = 'wide--one-third post-large--one-third large--one-third medium--one-half' %}     
        {% endcase %}

        {% if section.settings.show_footer_text %}
        <div class="grid__item wide--one-quarter post-large--one-quarter large--one-half medium--one-half footer__about">
          {% if section.settings.footer_text != blank  %}
          <h4 style="color:{{ section.settings.footer_heading_clr }};">{{ section.settings.footer_text }}</h4>
          {% endif %}
          {% if section.settings.footer_short_text != blank  %}
          <p style="color:{{ section.settings.footer_txt_clr }};">{{ section.settings.footer_short_text }}</p>
          {% endif %}
          {% if section.settings.abt_link != blank %}   <a style="text-decoration:underline;color:{{ section.settings.abt_link_clr }};" href="{{ section.settings.abt_link }}">{{ section.settings.abt_link_text }} </a>{% endif %}
        </div>
        {% endif %}
        
          {% if section.settings.show_contact or section.settings.footer_show_methods_of_payment %}
        <div class="grid__item wide--hide post-large--hide large--one-half medium--one-half footer-contact">
          {% if section.settings.footer_menu_4_title != blank %}        
          <h4 style="color:{{ section.settings.footer_heading_clr }};">{{ section.settings.footer_menu_4_title}}</h4> 
          {% endif %}

          {% if section.settings.footer_address != blank %}
          <div class="address" style="color:{{ section.settings.footer_txt_clr }};">         
            <address>{{ section.settings.footer_address }}</address>
          </div>
          <div class="contact-phone" style="color:{{ section.settings.footer_txt_clr }};">
            {% if section.settings.footer_contact_no != blank %}
            <i class="fas fa-phone"></i>{{ section.settings.footer_contact_no }}
            {% endif %}
          </div>

          {% if section.settings.office_hours != blank %}
          <div class="office-hours" style="color:{{ section.settings.footer_txt_clr }};">
            <i class="far fa-clock"></i>{{ section.settings.office_hours }}
          </div>
          {% endif %}

          {% if  section.settings.footer_contact_link != blank and section.settings.footer_contact_id != blank %}
          <div class="office-mail">
            <a style="color:{{ section.settings.footer_link_clr }};" href="mailto:{{ section.settings.footer_contact_link }}" style="color:{{ section.settings.footer_txt_clr }};"><i class="far fa-envelope"></i>{{ section.settings.footer_contact_id }}</a>
            {% endif %} 
          </div>
          {% endif %}       

          {% if section.settings.footer_show_methods_of_payment %}
          <div class="footer-icons">        
            <ul class="inline-list payment-icons">
              {% if section.settings.payment_icon_1 != blank %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_1  }}"></i></a></li>{% endif %}
              {% if section.settings.payment_icon_2 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_2 }}"></i></a></li>{% endif %}
              {% if section.settings.payment_icon_3 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_3  }}"></i></a></li>{% endif %}
              {% if section.settings.payment_icon_4 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_4  }}"></i></a></li>{% endif %}
              {% if section.settings.payment_icon_5 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_5  }}"></i></a></li>{% endif %}
              {% if section.settings.payment_icon_6 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_6 }}"></i></a></li>{% endif %}    
              {% if section.settings.payment_icon_7 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_7 }}"></i></a></li>{% endif %}            
              {% if section.settings.payment_icon_8 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_8 }}"></i></a></li>{% endif %}   
              {% if section.settings.payment_icon_9 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_9 }}"></i></a></li>{% endif %}  
              {% if section.settings.payment_icon_10 != blank  %}<li><a href="/cart"><i class="{{ section.settings.payment_icon_10 }}"></i></a></li>{% endif %}            
            </ul>                  
          </div> 
          {% endif %}
        </div>
        {% endif %} 
        
        
        <div class="grid__item wide--one-half post-large--one-half large--one-half footer-links-column" style="border-left: 1px solid {{ section.settings.footer_border }}; border-right: 1px solid {{ section.settings.footer_border }};">
          {%- assign footer_linklist = section.settings.footer_menu_1 -%}
          {% if linklists[footer_linklist].links.size > 0 %}
          <div class="grid__item {{ footer_column_width }}">
            {% unless num_footer_columns == 1 %}
            <h4 style="color:{{ section.settings.footer_heading_clr }};">{{ section.settings.footer_menu_1_title}}</h4>
            {% endunless %}
            <ul class="site-footer__links{% if num_footer_columns == 1 %} inline-list{% endif %}">
              {% for link in linklists[section.settings.footer_menu_1].links %}
              <li><a href="{{ link.url }}" style="color:{{ section.settings.footer_link_clr }};">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
          {% endif %}

          {%- assign footer_linklist = section.settings.footer_menu_2 -%}
          {% if linklists[footer_linklist].links.size > 0 %}
          <div class="grid__item {{ footer_column_width }}">            
            <h4 style="color:{{ section.settings.footer_heading_clr }};">{{ section.settings.footer_menu_2_title}}</h4>         
            <ul class="site-footer__links{% if num_footer_columns == 1 %} inline-list{% endif %}">
              {% for link in linklists[section.settings.footer_menu_2].links %}
              <li><a href="{{ link.url }}" style="color:{{ section.settings.footer_link_clr }};">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
          {% endif %}


          {%- assign footer_linklist = section.settings.footer_menu_3 -%}
