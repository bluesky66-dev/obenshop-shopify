          <div class="grid__item {{ footer_column_width }}">            
            <h4 style="color:{{ section.settings.footer_heading_clr }};">{{ section.settings.footer_menu_3_title}}</h4>             
            <ul class="site-footer__links{% if num_footer_columns == 1 %} inline-list{% endif %}">
              {% for link in linklists[section.settings.footer_menu_3].links %}
              <li><a href="{{ link.url }}" style="color:{{ section.settings.footer_link_clr }};">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
          {% endif %}
          <div class="footer-icons">  
            {% if section.settings.footer_social_enable %}
            {% if section.settings.social_title != blank %}
            <h4 style="color:{{ section.settings.footer_heading }};">{{ section.settings.social_title }}</h4>   
            {% endif %}
            {% include 'social-links-type-1' %}
            {% endif %}  
          </div>
        </div>   

        {% if section.settings.show_contact or section.settings.footer_show_methods_of_payment %}
        <div class="grid__item wide--one-quarter post-large--one-quarter large--hide medium--hide small--hide footer-contact">
          {% if section.settings.footer_menu_4_title != blank %}        
