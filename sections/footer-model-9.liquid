    .footer-model-9 .site-footer .social-icons li a:hover { color:{{ section.settings.social_icon_hover_clr }} !important; }
    .footer-model-9 .site-footer input::-webkit-input-placeholder {  color:{{ section.settings.input_text }};}
    .footer-model-9 .site-footer input:-moz-placeholder { color:{{ section.settings.input_text }};}
    .footer-model-9 .site-footer input::-moz-placeholder {  color:{{ section.settings.input_text }};}
    .footer-model-9 .site-footer input:-ms-input-placeholder {  color:{{ section.settings.input_text }};}
    .footer-model-9 .site-footer input { color:{{ section.settings.input_text }}; }
   .footer-model-9 h5 {color:{{ section.settings.footer_text }}; }
   .footer-model-9 .site-footer input {background:{{section.settings.footer_input_bg}};color:{{ section.settings.input_text }};}
   .footer-model-9 .site-footer button { color:{{ section.settings.newsletter_btn_text }}; }
      .footer-model-9 .site-footer button:hover { color:{{ section.settings.color_footer_news_btn_text }}; }

   
   
