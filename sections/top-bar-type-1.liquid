"label": "Pick linkedlist"
},
{
"type": "header",
"content": "Top Bar"
},
{
"type": "color",
"id": "top_bar_bg",
"label": "Top bar background",
"default": "#fff"
},
{
"type": "color",
"id": "top_bar_text",
"label": "Top bar text",
"default": "#000"
},
{
"type": "color",
"id": "top_bar_links",
"label": "Top bar links",
"default": "#000"
},
{
"type": "color",
"id": "top_bar_link_hover",
"label": "Top bar links hover",
"default": "#35b8f4"
},
{
"type": "color",
"id": "top_bar_border",
"label": "Top bar border",
"default": "#35b8f4"
},
{
"type": "checkbox",
