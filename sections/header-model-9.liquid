
{% if section.settings.display_top_bar %}    
<div class="top_bar top-bar-type-9" style="background:{{ section.settings.top_bar_bg }};">  
  <div class="container">

    <div class="grid__item">
      <div class="header_social top_bar_left">


        <div class="grid__item wide--one-third post-large--one-third large--one-third medium--one-half small--one-half">  
          <ul class="menu_topbar_right grid__item">                  
            {% if settings.display_currency %} 
            <li class="header_currency">
              <ul class="tbl-list">
                <li class="currency dropdown-parent uppercase currency-block">            
                  {% include 'currencies-switcher' %}
                </li>
              </ul>
            </li>  
            {% endif %}                     
          </ul>
        </div>  


        <div class="grid__item wide--one-third post-large--one-third large--one-third medium-down--hide">  

          {% if section.settings.header_welcome_text != blank %}
          <ul class="menu_bar_left grid__item">          
            <li class=" phone_txt"><span>{{ section.settings.header_welcome_text }}</span></li>          
          </ul>
          {% endif %}  

        </div>

        <div class="grid__item wide--one-third post-large--one-third large--one-third medium--one-half small--one-half"> 

          {% if section.settings.header_help_text != blank %}
          <ul class="menu_bar_left grid__item">          
            <li class="medium-down--hide phone_no"><span>{{ section.settings.header_help_text }}</span></li>    
            {% if section.settings.display_wishlist %}   
            <li class="top-wish">
              <a href="/pages/wishlist"><i class="fa fa-heart"></i>Wishlist</a>
            </li>
            {% endif %} 
          </ul>
          {% endif %}  

        </div>




      </div> 
    </div>

  </div>
</div>
{% endif %} 
<header class="site-header">
  <div class="grid--full site-header__menubar"> 
    <div class="container">
      <div class="grid__item menubar_inner">
        {% if section.settings.display_search %}  
        <div class="grid__item wide--two-sixths  post-large--two-sixths large--two-sixths medium-down--hide">
          <div class="header-search">
            <div id="sb-search" class="sb-search medium-down--hide" >
              <form action="/search" method="get" class="search-bar__table-cell search-bar__form" role="search">							
                {% if settings.show_search_prt %} 
                      <input type="hidden" name="type" value="product">  
                      {% endif %}
                <input type="text" id="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" aria-label="{{ 'general.search.placeholder' | t }}" class="search-bar__input sb-search-input">
                <input class="sb-search-submit" type="submit" value="">
                <span class="sb-icon-search fa fa-search"></span>
              </form>
            </div>
          </div>
        </div>
        {% endif %} 




        {% if template == 'index' %}
        <h1 class="grid__item wide--one-third post-large--one-third large--one-third site-header__logo" itemscope itemtype="http://schema.org/Organization">
          {% else %}
          <div class="h1 site-header__logo grid__item wide--two-sixths  post-large--two-sixths  large--two-sixths" itemscope itemtype="http://schema.org/Organization">
            {% endif %}
            {% if settings.logo_use_image %}
            <a  href="/" style="max-width: {{ settings.logo_max_width }}px;">
              <img class="normal-logo" src="{{ 'logo.png' | asset_url  }}" alt="{{ shop.name }}" itemprop="logo">
            </a>
            {% else %}
            <a class="logo_name" href="/">{{ shop.name }}</a>
            {% endif %}
            {% if template == 'index' %}
            </h1>
          {% else %}
          </div>
        {% endif %}   

        <ul class="menu_bar_right grid__item wide--one-third  post-large--one-third large--one-third small-grid__item">

          {% if section.settings.display_search %}  
          <li class="wide--hide post-large--hide large--hide ">                  
            <div class="header-search">
              <div class="header_toggle"><span class="zmdi zmdi-search"></span></div>
              <div class="slidersearch header_slide_element">
                <form action="/search" method="get" class="search-bar__table-cell search-bar__form" role="search">							
                   <input type="hidden" name="type" value="product"> 
                  <input type="text" id="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" aria-label="{{ 'general.search.placeholder' | t }}" class="search-bar__input sb-search-input">
                  <button class="sb-search-submit wide--hide post-large--hide large--hide res_btn" type="submit" value=""><i class="fa fa-search"></i></button>
                </form>
              </div>
            </div>                  
          </li>
          {% endif %} 

          {% if section.settings.display_minicart %}
          <li class="header-bar__module cart header_cart">
            {% include 'mini-cart' %} 
          </li> 
          {% endif %} 



         

{% if shop.customer_accounts_enabled %}
