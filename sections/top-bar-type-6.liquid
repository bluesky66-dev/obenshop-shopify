 {% if section.settings.display_top_bar %}  
<div class="top_bar top-bar-type-6">    
  <div class="container">
    {% if section.settings.header_phone_value != blank or  section.settings.header_mail_value != blank %}
    <ul class="top_bar_left">
      {% if section.settings.header_phone_value != blank %}
      <li><span>{{ section.settings.header_phone_label }} : {{ section.settings.header_phone_value }}</span></li>
      {% endif %}
      {% if section.settings.header_mail_value != blank %}
      <li><span>{{ section.settings.header_mail_label }} :</span><a href="mailto:{{ section.settings.header_mail_value }}"> {{ section.settings.header_mail_value }}</a></li>
      {% endif %}
    </ul>
    {% endif %}
    <div class="top_bar_menu">
      {%- assign top_bar_menu = section.settings.top_bar_menu %}
      {% if linklists[top_bar_menu].links.size > 0 %}
      <ul>
        {% for link in linklists[top_bar_menu].links %}
        <li>
          <a href="{{ link.url }}" class="{% if link.active %}current{% endif %}">
            {{ link.title }}         
          </a> 	    
        </li>
        {% endfor %}
      </ul>
      {% endif %}  

      {% if shop.customer_accounts_enabled or section.settings.display_wishlist %}
      <div class="customer_account">                          
        <ul>
          {% if shop.customer_accounts_enabled %}
          {% if customer %}
          <li>
           <a href="/account" title="{{ 'layout.customer.account' | t }}"><i class="fas fa-user"></i></a>
          </li>
          <li class="logout-link">
              <a title="{{ 'layout.customer.log_out' }}" href="/account/logout" ><i class="fas fa-user-sign-out-alt"></i></a>
            </li>
          {% else %}
          <li>
            <a title="{{ 'layout.customer.log_in' | t }}" href="/account/login"><i class="fas fa-sign-in-alt"></i></a>
          </li>
          <li>
            <a title="{{ 'layout.customer.create_account' | t }}" href="/account/register"><i class="fas fa-user"></i></a>
          </li>          
          {% endif %}  
          {% endif %} 
          {% if section.settings.display_wishlist %}   
          <li>            
            <a class="wishlist" href="/pages/wishlist" title="{{ 'products.wishlist.wishlist_name' | t }}"><i class="far fa-heart"></i></a>           
          </li>
          {% endif %} 
        </ul>
      </div>   
      {% endif %}  

      {% if section.settings.display_like_btn %}
      {% if section.settings.like_btn_url != blank %}
      <div class="top_like_btn">       
        {% include 'like-button' %}
      </div>
      {% endif %}
      {% endif %}
    </div>
  </div>
</div> 
 {% endif %}

 <style> 
        
    .header-type-6 .header-top a.close { background: {{ section.settings.stripe_icon }}; }  
    .header-type-6 .header-top a.close:hover { background: {{ section.settings.stripe_icon_hover }}; }  
    .header-type-6 .header-top { background: {{ section.settings.stripe_bg }}; }      
    .header-type-6 .header-top ul li { color: {{ section.settings.stripe_text }}; }    
        
    /* Top block */
    .header-type-6 .top_bar { background: {{ section.settings.top_bar_bg }}; }
    .header-type-6 .top_bar li { color:{{section.settings.top_bar_text}};}     
    .header-type-6 .top_bar a,.header-type-6 .top_bar button { color:{{section.settings.top_bar_links }};}    
    .header-type-6 .top_bar a:hover, .header-type-6 .top_bar a:hover span,.header-type-6 .top_bar button:hover { color:{{section.settings.top_bar_link_hover }};}    
     
</style>

{% schema %}
{
"name": "Top Bar",
"settings": [
  {
  "type":"checkbox",
  "id": "display_top_bar",
  "label": "Display topbar"	
  },
 {
  "type": "text",
  "id": "header_phone_label",
  "label": "Phone lable text",
  "default": "TOLL FREE"
  },
  {
  "type": "text",
  "id": "header_phone_value",
  "label": "Phone number",
  "default": "(00) 000 111 222"
  },  
  {
  "type": "text",
  "id": "header_mail_label",
  "label": "Mail lable text",
  "default": "MAIL INFO"
  },
  {
  "type": "text",
  "id": "header_mail_value",
  "label": "Mail address",
  "default": "info@somedomain.com"
  },  
  {
  "type": "link_list",
  "id": "top_bar_menu",
  "label": "Pick linkedlist"
  },

 {
  "type":"checkbox",
  "id": "display_like_btn",
  "label": "Display facebook like button"	
  },
{
  "type": "text",
  "id": "like_btn_url",
  "label": "FB url to like"  
  },
{
  "type": "header",
  "content": "Top Bar"
},
{
  "type": "color",
  "id": "top_bar_bg",
  "label": "Top bar background",
  "default": "#fff"
  },
{
  "type": "color",
  "id": "top_bar_text",
  "label": "Top bar text",
  "default": "#000"
  },
{
  "type": "color",
  "id": "top_bar_links",
  "label": "Top bar links",
  "default": "#000"
  },
{
  "type": "color",
  "id": "top_bar_link_hover",
  "label": "Top bar links hover",
  "default": "#35b8f4"
  },
{
  "type": "checkbox",
  "id": "display_wishlist",
  "label": "Display wishlist"
  },
{
  "type": "header",
  "content": "Border Block"
},
 {
  "type": "color",
  "id": "top_border_between_bars",
  "label": "Border lines",
  "default": "#e4e4e4"
  }
]
}
{% endschema %}


