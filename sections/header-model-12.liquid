      color:{{section.settings.search_text }};
    }
    .header-type-12 .header-search input#search::-moz-placeholder { /* Firefox 19+ */
      color:{{section.settings.search_text }};
    }
    .header-type-12 .header-search input#search:-ms-input-placeholder { /* IE 10+ */
      color:{{section.settings.search_text }};
    }
    .header-type-12 .header-search input#search:-moz-placeholder { /* Firefox 18- */
      color:{{section.settings.search_text }};
    }

       

    /* Header borders */
    {% if section.clr_border_image %}   .header-type-12 .site-header__menubar:after,.header-type-12 .is-sticky .menubar-section:after { background-image:url({{ section.settings.border_image | img_url: 'master' }});background-repeat:no-repeat;content:"";float:left;width:100%;height:3px; } {% endif %}
    .header-type-12 .top_bar ul li:last-child,.header-type-12 .top_bar li:last-child span,.header-type-12 .top_bar li:last-child a { border-right:none; }

    .header-all--collections ul { 
      height: 30px;
      width: 100%;float:left;

    }
    .header-all--collections ul li { padding: 5px 10px; z-index: 2; }

    .header-all--collections li.init { cursor: pointer; }


     .header-shipping-icons .ship-detail h6  {color:{{section.settings.shipping_title_clr}};}

    .header-shipping-icons .ship-detail p {color:{{section.settings.shipping_subtitle_clr}};}
    
    .header-type-12 .dt-sc-toggle-content { background: {{ section.settings.menubar_dropdown_bg }}; }
    .header-type-12 .dt-sc-toggle-content.header-account_links ul li a { color:{{ section.settings.menubar_dropdown_links }}; }
        .header-type-12 .dt-sc-toggle-content.header-account_links ul li a:hover { color:{{ section.settings.menubar_dropdown_links_hover }}; }
