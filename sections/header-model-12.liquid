
<div class="grid--full site-header__menubar"> 
  <div class="container">

    {% if section.settings.display_search %} 
    <div class="header-search wide--hide post-large--hide large--hide medium--hide small-show">
      <form action="/search" method="get" class="search-bar__table-cell search-bar__form" role="search">							
        {% if settings.show_search_prt %} 
                      <input type="hidden" name="type" value="product">  
                      {% endif %}  
        <input type="text" id="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" aria-label="{{ 'general.search.placeholder' | t }}" class="search-bar__input sb-search-input">
        <button class="sb-search-submit" type="submit" value=""><i class="fa fa-search"></i></button>
      </form>

    </div>
    {% endif %}

    <div class="menubar_inner">
      <div class="header_top">
        {% if template == 'index' %}
        <h1 class="grid__item site-header__logo" itemscope itemtype="http://schema.org/Organization">
          {% else %}
          <div class="h1 grid__item site-header__logo" itemscope itemtype="http://schema.org/Organization">
            {% endif %}
            {% if settings.logo_use_image %}
            <a href="/" style="max-width: {{ settings.logo_max_width }}px;">
              <img class="normal-logo" src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" itemprop="logo">
            </a>
            {% else %}
            <a class="logo_name" href="/">{{ shop.name }}</a>
            {% endif %}
            {% if template == 'index' %}
            </h1>
          {% else %}
          </div>
        {% endif %}   
      </div>
      
      <div class="header-mobile">
        <div class="menu-block visible-phone"><!-- start Navigation Mobile  -->
          <div id="showLeftPush">
            <i class="fa fa-bars" aria-hidden="true">  </i>
          </div>
        </div><!-- end Navigation Mobile  --> 
      </div>  


<script type="text/javascript">
  $(".header-all--collections ul").on("click", ".init", function() {
    $(this).closest(".header-all--collections ul").children('li:not(.init)').toggle();
  });

  var allOptions = $(".header-all--collections ul").children('li:not(.init)');
  $(".header-all--collections ul").on("click", "li:not(.init)", function() {
    allOptions.removeClass('selected');
    $(this).addClass('selected');
    $(".header-all--collections ul").children('.init').html($(this).html());
    allOptions.toggle();
  });






  $(".header-account_links ul").on("click", ".init", function() {
    $(this).closest(".header-account_links ul").children('li:not(.init)').toggle();
  });

  var allOptions = $(".header-account_links ul").children('li:not(.init)');
  $(".header-account_links ul").on("click", "li:not(.init)", function() {
    allOptions.removeClass('selected');
    $(this).addClass('selected');
    $(".header-account_links ul").children('.init').html($(this).html());
    allOptions.toggle();
  });


  $('.init').click(function() {
    if($('.init').hasClass('active')) {       
      $(this).removeClass('active');//.addClass('blue');
    }
    else{
      $(this).addClass('active');//.addClass('red');
    }
  });



</script>
      <div class="slidersearch search-categories">
        <div class="search-categories-section">
          {% if section.settings.display_all_category %} 
          <div class="header-all--collections list-unstyled">
            {%- assign search_linklist = section.settings.all_categories %}
            {% if linklists[search_linklist].links.size > 0 %}
            <ul class="inline-list">
              <li class="init">All Categories</li>
              {% for link in linklists[search_linklist].links %}
              <li data-value="value {{ forloop.index }}"><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
            {% endif %}          
          </div>
          {% endif %}


          {% if section.settings.display_search %} 
          <div class="header-search small--hide">
            <form action="/search" method="get" class="search-bar__table-cell search-bar__form" role="search">							
               {% if settings.show_search_prt %} 
                      <input type="hidden" name="type" value="product">  
                      {% endif %} 
              <input type="text" id="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" aria-label="{{ 'general.search.placeholder' | t }}" class="search-bar__input sb-search-input">
              <button class="sb-search-submit" type="submit" value=""><i class="fa fa-search"></i></button>
            </form>

          </div>
          {% endif %}
        </div>
      </div>


      <div class="header-shipping-details">
        <div class="header-shipping-icons">
          {% if section.settings.ship_1_icon != blank %}
          <div class="ship-icon"><img src="{{section.settings.ship_1_icon | img_url : '40x40' }}" alt="{{section.settings.ship_1_title}}" title="{{section.settings.ship_1_title}}"></div>
          {% endif %}
          {% if section.settings.ship_1_title != blank %}
          <div class="ship-detail">
            <h6>{{section.settings.ship_1_title}}</h6>
            <p>{{section.settings.ship_1_subtitle}}</p>
          </div>
          {% endif %}
        </div>
        <div class="header-shipping-icons">
          {% if section.settings.ship_2_icon != blank %}
          <div class="ship-icon"><img src="{{section.settings.ship_2_icon | img_url : '40x40' }}" alt="{{section.settings.ship_2_title}}" title="{{section.settings.ship_2_title}}"></div>
          {% endif %}
          {% if section.settings.ship_2_title != blank %}
          <div class="ship-detail">
            <h6>{{section.settings.ship_2_title}}</h6>
            <p>{{section.settings.ship_2_subtitle}}</p>
          </div>
          {% endif %}
        </div>
      </div>



      {% if section.settings.top_promo_image_1 != blank %}
      <div class="grid__item wide--hide post-large--hide large--hide medium--hide small--show promo_img">

        {% if section.settings.top_promo_link_1 != blank %}
        <a href="{{ section.settings.top_promo_link_1 }}">
          {% endif %}
          <img src="{{ section.settings.top_promo_image_1 | img_url: 'master' }}" />
          {% if section.settings.top_promo_link_1 != blank %}
        </a>
        {% endif %}


      </div>
      {% endif %}
    </div>
  </div>
</div>

  
