    .header-type-12 .search-bar__form  {  }
    .header-type-12 .header-search button { color:{{section.settings.search_btn_text }};background:{{ section.settings.search_btn_bg }};} 
    .header-type-12 .header-search button:hover { color:{{section.settings.search_btn_text_hvr}};background:{{ section.settings.search_bg_hover }};} 
    .header-type-12 .header-search  { background:{{section.settings.search_bg }};}
    .header-type-12 .header-all--collections { background:{{section.settings.categories_bg }};color:{{ section.settings.categories_text }};}
    .header-type-12 .header-all--collections ul li a { color:{{ section.settings.categories_text }}; }
