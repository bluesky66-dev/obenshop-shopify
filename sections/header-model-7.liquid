  {% if section.settings.clr_border_image %} .header-type-7 .site-header__menubar:after { background-image:url({{ section.settings.menu_border_bg | img_url: 'master' }});background-repeat: no-repeat; content: "";  float: left; width: 100%;  height: 25px; } {% endif %}
  .header-type-7 .is-sticky .site-header__menubar:after { background-image:none;height:0; }

  /* Dropdown block */
  .header-type-7 .menubar-section #Togglemodal i {color: {{ section.settings.dropdown_icon }};}
  .header-type-7 .menubar-section #Togglemodal i:hover {color: {{ section.settings.dropdown_icon_hover }};}
  .header-type-7 #slidedown-modal {background: {{ section.settings.dropdown_bg }};}
  .header-type-7 #slidedown-modal ul li a {color:{{section.settings.dropdown_link}};} 
  .header-type-7 #slidedown-modal ul li a:hover {color:{{section.settings.dropdown_hover_link}};} 


  /* Search block */     
  .header-type-7 .header-search input#search {color:{{section.settings.search_text }};} 
  .header-type-7 .header-search span,.header-type-7 .search-bar__form button.res_btn  {color:{{section.settings.search_icon}};} 
  .header-type-7 .header-search span:hover,.header-type-7 .search-bar__form button.res_btn:hover {color:{{section.settings.search_icon_hover }};} 
  .header-type-7 .sb-search.sb-search-open input[type="text"] { border:1px solid {{ section.settings.border_between_bars}}; background:{{section.settings.search_bg }};}
  .header-type-7 .sb-search.sb-search-open .sb-icon-search { color:{{section.settings.Btn_text }};background:{{ section.settings.search_btn_bg }};}
  .header-type-7 .sb-search.sb-search-open .sb-icon-search:hover { color:{{section.settings.search_btn_hover }};background:{{ section.settings.search_btn_bghover }};}
  .header-type-7 .search-bar__form button.res_btn { background:none;border:none;height:auto; }

  .header-type-7 .header-search input#search::-webkit-input-placeholder  { /* Chrome/Opera/Safari */
    color:{{section.settings.search_text }};
  }
  .header-type-7 .header-search input#search::-moz-placeholder { /* Firefox 19+ */
    color:{{section.settings.search_text }};
  }
  .header-type-7 .header-search input#search:-ms-input-placeholder { /* IE 10+ */
    color:{{section.settings.search_text }};
  }
  .header-type-7 .header-search input#search:-moz-placeholder { /* Firefox 18- */
    color:{{section.settings.search_text }};
  }

  /* Cart Summary block */
  .header-type-7 a.icon-cart-arrow i  {color: {{ section.settings.minicart_icon }};}
  .header-type-7 a.icon-cart-arrow:hover i {color: {{ section.settings.minicart_icon_hover }};}
  .header-type-7 #slidedown-cart .actions, .header-type-7  #slidedown-cart  {background: {{ section.settings.minicart_bg }};}
  .header-type-7 .header-bar__module p {color: {{ section.settings.minicart_text }};}
  .header-type-7 .header-bar__module a {color:{{section.settings.minicart_link }};}  
  .header-type-7 .header-bar__module a:hover {color:{{section.settings.minicart_link_hover}};} 
  .header-type-7 .header-bar__module .btn {color:{{section.settings.minicart_btn_text}};background: {{ section.settings.minicart_btn_bg }};} 
  .header-type-7 .header-bar__module .btn:hover {color:{{section.settings.minicart_btn_hover_text}};background: {{ section.settings.minicart_btn_hover_bg }};} 
  .header-type-7 #slidedown-cart .total .price, .header-type-7 #minicart_total,.header-type-7 #slidedown-cart ul li .cart-collateral {color:{{section.settings.minicart_total }};} 
  .header-type-7 #slidedown-cart li { border-bottom:1px solid {{ section.settings.border_between_bars}}; }

  /* Currency block */


  .header-type-7 .header_currency ul select,.header-type-7 .header_currency ul li.currency .selector-arrow::after {color:{{section.settings.currency_icon}};}   
  .header-type-7 .header_currency ul select:hover , .header_currency ul li.currency .selector-arrow:hover::after{color:{{section.settings.currency_icon_hover}};}  
  .header-type-7 .header_currency ul li.currency:hover:after {border-top-color:{{section.settings.currency_icon_hover}};}
  .header-type-7 .header_currency ul li.currency:after {border-top-color:{{section.settings.currency_icon}};}
  .header-type-7 .header_currency option {background:{{section.settings.currency_bg}};color:{{section.settings.currency_link}};}

