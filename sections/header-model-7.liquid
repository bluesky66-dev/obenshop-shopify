<header class="site-header">
  <div class="grid--full site-header__menubar"> 
    <div class="container">
      <div class="grid__item menubar_inner">
        <div class=" grid__item wide--one-third  post-large--one-third large--one-third medium-down--hide"> 
          <ul class="menu-bar-left">

            <li class="search-categories-section">
              {% if section.settings.display_search %}                
              <div class="header-search">
                <div class="header-search">
                  <a href="/search" class="site-header__link site-header__search js-drawer-open-top">
                    <span class="fa fa-search" aria-hidden="true"></span>
                  </a>
                </div>
              </div>
              {% endif %} 
            </li>
            {% if settings.display_currency %} 
            <li class="header_currency">
              <ul class="tbl-list">
                <li class="currency dropdown-parent uppercase currency-block">                       
                  {% include 'currencies-switcher' %}                   
                </li>
              </ul>
            </li> 
            {% endif %}
          </ul>
        </div>
        <div class=" grid__item wide--one-third  post-large--one-third large--one-third medium-down--hide"> 
          {% if template == 'index' %}
          <h1 class="site-header__logo" itemscope itemtype="http://schema.org/Organization">
            {% else %}
            <div class="h1 site-header__logo" itemscope itemtype="http://schema.org/Organization">
              {% endif %}
              {% if settings.logo_use_image %}
              <a  href="/" style="max-width: {{ settings.logo_max_width }}px;">
                <img class="normal-logo" src="{{ 'logo.png' | asset_url  }}" alt="{{ shop.name }}" itemprop="logo">
              </a>
              {% else %}
              <a class="logo_name" href="/">{{ shop.name }}</a>
              {% endif %}
              {% if template == 'index' %}
              </h1>
            {% else %}
            </div>
          {% endif %}   
        </div>
        <div class=" grid__item wide--one-third  post-large--one-third large--one-third medium--one-half small--grid__item"> 
          <ul class="menu_bar_right">

            <li> <div class="header-mobile">
              <div class="menu-block visible-phone"><!-- start Navigation Mobile  -->
                <div id="showLeftPush">
                  <i class="fa fa-bars icons" aria-hidden="true"></i>
                </div>
              </div><!-- end Navigation Mobile  --> 
              </div> </li>

            {% if settings.display_currency %} 
            <li class="header_currency grid__item wide--hide  post-large--hide large--hide">
              <ul class="tbl-list">
                <li class="currency dropdown-parent uppercase currency-block">                       
                  {% include 'currencies-switcher' %}                   
                </li>
              </ul>
            </li> 
            {% endif %}


            {% if section.settings.display_search %}  
            <li class="wide--hide post-large--hide large--hide">                  
              <div class="header-search">
                <div class="header_toggle"><span class="zmdi zmdi-search"></span></div>
                <div class="slidersearch header_slide_element">
                  <form action="/search" method="get" class="search-bar__table-cell search-bar__form" role="search">	
                    {% if settings.show_search_prt %} 
                      <input type="hidden" name="type" value="product">  
                      {% endif %} 
                    <input type="text" id="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" aria-label="{{ 'general.search.placeholder' | t }}" class="search-bar__input sb-search-input">
                    <button class="sb-search-submit wide--hide post-large--hide large--hide res_btn" type="submit" value=""><i class="fa fa-search"></i></button>
                  </form>
                </div>
              </div>                  
            </li>
            {% endif %} 

            {% if section.settings.display_wishlist %}   
            <li class="wishlist medium-down--hide">            
              <a  href="/pages/wishlist" title="{{ 'products.wishlist.wishlist_name' | t }}"><i class="fa fa-heart"></i></a>            
            </li>
            {% endif %} 



            {% if shop.customer_accounts_enabled %} 
            <li class="customer_account"> 
              <div class="header-account_links">
                <ul> 
                  {% if customer %}
                  <li>
                    <a href="/account" title="{{ 'layout.customer.account' | t }}" data-value="value 1"><i class="fa fa-user-following"></i></a>
                  </li>
                  <li class="logout-link">
                    <a href="/account/logout" title="{{ 'layout.customer.log_out' | t }}" data-value="value 1"><i class="fa fa-sign-out-alt"></i></a>
                  </li>
                  {% else %}
                  <li>
                    <a href="/account/login" title="{{ 'layout.customer.log_in' | t }}" data-value="value 1"><i class="fa fa-user"></i></a>
                  </li>

                  {% endif %}  

                </ul>   

              </div>

            </li>
            {% endif %} 

            {% if section.settings.display_minicart %}   
            <li class="header-bar__module cart header_cart">
              {% include 'mini-cart' %} 
            </li> 
            {% endif %}



          </ul>
        </div>
        
            <div class=" grid__item wide--hide  post-large--hide large--hide medium--one-half small--grid__item"> 
          {% if template == 'index' %}
          <h1 class="site-header__logo" itemscope itemtype="http://schema.org/Organization">
            {% else %}
            <div class="h1 site-header__logo" itemscope itemtype="http://schema.org/Organization">
              {% endif %}
              {% if settings.logo_use_image %}
              <a  href="/" style="max-width: {{ settings.logo_max_width }}px;">
                <img class="normal-logo" src="{{ 'logo.png' | asset_url  }}" alt="{{ shop.name }}" itemprop="logo">
              </a>
              {% else %}
              <a class="logo_name" href="/">{{ shop.name }}</a>
              {% endif %}
              {% if template == 'index' %}
              </h1>
            {% else %}
            </div>
          {% endif %}   
        </div>
        
      </div>
    </div>

  </div>    
</header>



<style> 

  .header-type-7 .header-top a.close { color: {{ section.settings.stripe_icon }}; }  
  .header-type-7 .header-top a.close:hover { color: {{ section.settings.stripe_icon_hover }}; }  
  .header-type-7 .header-top { background: {{ section.settings.stripe_bg }}; }  
  .header-type-7 .header-top ul li:last-child { border-right:none; }  
  .header-type-7 .header-top ul li a { color: {{ section.settings.stripe_link }}; }
  .header-type-7 .header-top ul li a:hover { color: {{ section.settings.stripe_link_hover }}; }
  .header-type-7 .header-top ul li { color: {{ section.settings.stripe_text }};border-right:1px solid {{ section.settings.stripe_border_between_bars }}; } 
  .header-type-7 .header-bar__module.cart .baskettop a.icon-cart-arrow #cartCount { background: {{ section.settings.minicart_count_bg }};color:{{section.settings.minicart_count }};}
  .header-type-7 .header-bar__module.cart .baskettop a.icon-cart-arrow:hover #cartCount { background: {{ section.settings.minicart_count_hover_bg }};color:{{section.settings.minicart_count_hover_text }};}
  .header-type-7  .top_bar_menu ul li { line-height:normal;border-right:1px solid {{ section.settings.top_border_between_bars }}; }
  .header-type-7  .top_bar_menu ul li:last-child,.header-type-7 .customer_account ul li:last-child { border-right:none; }

  /* Top block */
  .header-type-7 .top_bar { background: {{ section.settings.top_bar_bg }}; }
  .header-type-7 .top_bar li, .header-type-7 .top_bar span { color:{{section.settings.top_bar_text}};}     
  .header-type-7 .top_bar a,.header-type-7 .top_bar button { color:{{section.settings.top_bar_links }};}    
  .header-type-7 .top_bar a:hover, .header-type-7 .top_bar a:hover span,.header-type-7 .top_bar button:hover { color:{{section.settings.top_bar_link_hover }};}    


  /* Logo block */
  .header-type-7 .site-header__menubar { background: {{ section.settings.logo_bar_bg }};}    
  .header-type-7 .site-header__logo a,.header-type-7 .customer_account ul li a,.header-type-7 .wishlist a,.header-type-7 .header-mobile #showLeftPush { color:{{section.settings.logo_text }};}
  .header-type-7 .site-header__logo a:hover,.header-type-7 .customer_account ul li a:hover,.header-type-7 .wishlist a:hover,.header-type-7 .header-mobile #showLeftPush:hover { color:{{section.settings.logo_hover_text }};}    

  /* Menu  block */


  .header-type-7 .menu-tool,.site-nav > li:hover > a:hover,.cbp-spmenu a:active,.site-nav > li.dropdown:hover > a {background: {{ section.settings.menubar_bg }};}
  .header-type-7 .menu-tool ul li {color: {{ section.settings.menubar_text }};}
  .header-type-7 .menu-tool ul li a,.site-nav > li.dropdown:hover > a,.cbp-spmenu a:active {color:{{section.settings.menubar_links}};}  
  .header-type-7 .menu-tool ul li a:hover,.header-type-7 .menu-tool .site-nav > li > a.current:hover,.cbp-spmenu .site-nav>li>a:hover  {color:{{section.settings.menubar_links_hover}};} 
  .site-nav > li.dropdown:hover > p.toogleClick:before  {border-top-color:{{section.settings.menubar_links_hover}};} 
  .site-nav > li.dropdown:hover > p.toogleClick.mobile-toggle-open:before { border-bottom-color:{{section.settings.menubar_links_hover}}; }
  .header-type-7 .menu-tool .site-nav >  li > a.current {color:{{section.settings.menu_active}};} 
  .header-type-7 .site-nav-dropdown,#MobileNav,.mobile-nav__sublist { background: {{ section.settings.menubar_dropdown_bg }};}
  .header-type-7 .site-nav-dropdown .inner > a {color: {{ section.settings.menubar_dropdown_caption }};}    
  .header-type-7 .site-nav-dropdown .inner > a:hover {color: {{ section.settings.menubar_dropdown_caption_hover }};}    
  .header-type-7 .site-nav-dropdown .inner .dropdown a,.header-type-7 .menu-tool .site-nav .site-nav-dropdown li a,.header-type-7 .site-nav .widget-featured-product .product-title,.header-type-7 .site-nav .widget-featured-product .widget-title h3,#MobileNav a,.mobile-nav__sublist a,.site-nav .widget-featured-nav .owl-prev a,.site-nav .widget-featured-nav .owl-next a  {color: {{ section.settings.menubar_dropdown_links }};}
