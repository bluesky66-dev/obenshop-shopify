<div data-section-id="{{ section.id }}"  data-section-type="testimonial-type-11" class="testimonial-type-11" style="{% if section.settings.image_1 %}background-image:url('{{ section.settings.image_1 | img_url: '1920X' }}');background-attachment:fixed;background-repeat:no-repeat;background-position:center center; {% else %}background-color:{{section.settings.background_color}};{% endif%}">
  <div class="grid-uniform">    
    {% if section.settings.title != blank %}
    <div class="border-title wow fadeInDown animated">
      <h2 style="color:{{section.settings.title_color }};background:{{section.settings.title_bg_clr}};">{{ section.settings.title }}</h2>  
    </div>
    {% endif %}

 
    <div id="test-car-11" class="test-car-11 {{section.id}}-loop">
      {% if section.blocks.size > 0 %}  
      {% for block in section.blocks %}
      <div class="grid__item"> 
        <div class="testimonial-block wow fadeInUp animated" >           
          <blockquote>
            {% if block.settings.text_desc != blank %}
            <q style="color:{{block.settings.des_color }}">{{ block.settings.text_desc }}</q>
            {% endif %} 
          </blockquote>
          <div class="test-detail">   

            <div class="text-img">
              {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: '100X' }}" alt="{{ block.settings.image_heading }}" />             
              {% else %}
              <img src="//via.placeholder.com/100x100">
              {% endif%}        
            </div>
            <div class="test-inner-detail">
              {% if block.settings.author_name != blank %}
              <h4 style="color:{{block.settings.author_color }}">{{ block.settings.author_name }}</h4>
              {% endif %}
              {% if block.settings.author_designation != blank %}
              <span style="color:{{block.settings.author_designationcolor }}">{{ block.settings.author_designation }}</span>
              {% endif %}
            </div>


            <div class="overlay"></div>
          </div>
        </div>
      </div>
      {% endfor %}         
      {% endif %}  
    </div>
  </div>  

</div>


<style>

  .testimonial-type-11{background:{{section.settings.bg_color }};}

  .testimonial-type-11 .owl-theme .owl-controls .owl-page span{background:{{section.settings.border_color }};}

  .testimonial-type-11 .authorimg::before{    border-bottom: 40px solid {{section.settings.imgborder_color }};}

  .testimonial-type-11 .authorimg{border:3px solid {{section.settings.imgborder_color }};}

  .testimonial-type-11 blockquote q::before , .testimonial-type-11 blockquote q::after{color:{{section.settings.quote_color }};}

  .testimonial-type-11  .owl-prev , .testimonial-type-11 .owl-next{line-height:30px;background:{{section.settings.arrowbg_color }};color:{{section.settings.arrow_color }};}


  .testimonial-type-11 .slick-slide.slick-current.slick-active.slick-center {opacity:1;}
  .testimonial-type-11 .slick-slide {opacity:0.08;}
  
  
   {% if section.settings.show_overlay_bg %}
  .testimonial-type-11::before {background:{{section.settings.overlay_bg_color}};}
  {% endif %} 
  
  
  .testimonial-type-11 .slick-prev, .testimonial-type-11 .slick-next {color:{{section.settings.arrow_color}};}
  .testimonial-type-11 .slick-prev:hover, .testimonial-type-11 .slick-next:hover {color:{{section.settings.arrow_hover_color}};}
  .testimonial-type-11 .slick-dots li button::before {color:{{section.settings.arrow_color}};}
</style>


<script>
  jQuery(document).ready(function() {
    jQuery('.test-car-11.{{section.id}}-loop').slick({
           centerMode: true,
           centerPadding: '20px',
           dots:true,
           slidesToShow: 3,
           responsive: [
           {
           breakpoint: 768,
           settings: {
           arrows: false,
           centerMode: true,
           centerPadding: '40px',
           slidesToShow: 3

           }
           },
           {
           breakpoint: 480,
           settings: {
           arrows: false,
           centerMode: true,
           centerPadding: '40px',
           slidesToShow: 1
           }
           }
           ]
           });
  }); 

</script>






