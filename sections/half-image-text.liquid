<div class="half-image-text">
  {% for block in section.blocks %}
    <div class="half-image-text__row">
      <div class="half-image-text__text" style="background-color: {{ block.settings.background_color }};">
        {% if block.settings.subtitle %}
          <div class="half-image-text__subtitle" style="color: {{ block.settings.text_color }};">
            {{ block.settings.subtitle }}
          </div>
        {% endif %}

        {% if block.settings.title %}
          <div class="half-image-text__title" style="color: {{ block.settings.text_color }};">
            {{ block.settings.title }}
          </div>
        {% endif %}

        {% if block.settings.text %}
          <div class="half-image-text__content" style="{{ block.settings.text_color }}">
            {{ block.settings.text | newline_to_br }} 
          </div>
        {% endif %}

        {% if block.settings.link and block.settings.button %}
          <div class="half-image-text__btn">
            <a class="btn" href="{{ block.settings.link }}" style="background-color: {{ block.settings.button_background_color }}; color: {{ block.settings.button_text_color }};">
              {{ block.settings.button }}
            </a>
          </div>
        {% endif %}
      </div>

      {% if block.type == 'image_text' %}
        <div class="half-image-text__image">
          {% if block.settings.image %}
            {% render 'image', image: block.settings.image, sizes: '960px' %}
          {% endif %}
        </div>
      {% endif %}

      {% if block.type == 'list_text' %}
        <div class="half-image-text__list" style="background-color: {{ block.settings.list_background_color }}; color: {{ block.settings.list_text_color }};">
          {{ block.settings.list_html }}
        </div>
      {% endif %}
    </div>
  {% endfor %}
</div>

