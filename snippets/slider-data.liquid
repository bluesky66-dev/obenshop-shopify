{%- assign img_url = block.settings.image | img_url: '2000x' -%}
{%- assign mobile_img_url = block.settings.mobile_image | img_url: '767x' -%}        

{% if  block.settings.link != blank %} <a href="{{ block.settings.link }}"> {% endif %}
{% if  block.settings.image != blank %}
<img src="{{img_url}}"  class="slide-img medium-down--hide" alt="{{ block.settings.image.alt }}" />
{% else %}
<img src="//via.placeholder.com/1920x940"   class="slide-img medium-down--hide" alt="{{ block.settings.image.alt }}">
{% endif %}

{% if  block.settings.mobile_image != blank %}
<img src="{{mobile_img_url}}"  class="slide-img wide--hide post-large--hide large--hide" alt="{{ block.settings.image.alt }}" />
{% else %}
<img src="//via.placeholder.com/767x750"   class="slide-img wide--hide post-large--hide large--hide" alt="{{ block.settings.image.alt }}">
{% endif %}
{% if  block.settings.link != blank %} </a> {% endif %}


<div class="slider-content slider-content-bg">
  <div class="container">
    <div class="slide_left">
      {% if block.settings.subheading != blank %}
        <h5 class="slide-subheading animated "
            style="
                  {% if block.settings.subheading_color != blank %}
                  color:{{ block.settings.subheading_color }};
                  {% endif %} 
                    ">
          {{  block.settings.subheading }}
        </h5>
      {% endif %}

      {% if block.settings.title != blank %}
        <h2 class="slide-heading animated "
            style="
                  {% if block.settings.heading_color != blank %}
                  color:{{ block.settings.heading_color }};
                  {% endif %}">
          {{ block.settings.title  }}
        </h2>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="slide-text animated" style="color: {{ block.settings.text_color }};">
          {{  block.settings.text }}
        </div>
      {% endif %}

      {% if block.settings.button != blank %}
        <a href="{{ block.settings.link }}" class="slide-button animated btn" style="
                  {% if block.settings.button_color != blank %}
                  color:{{ block.settings.button_color }};
                  {% endif %}

                  {% if block.settings.button_bg != blank %}
                  background-color: {{ block.settings.button_bg }};
                  {% endif %}">
          {{  block.settings.button }}
        </a>
      {% endif %}
    </div>
  </div>
</div>
